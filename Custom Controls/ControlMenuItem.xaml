<UserControl x:Class="CyubeBlockMaker.ControlMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CyubeBlockMaker"
             mc:Ignorable="d" 
			 MouseEnter="Label_MouseEnter"
			 MouseLeave="Label_MouseLeave"
			 MouseDown="Label_MouseDown"
             d:DesignHeight="30" d:DesignWidth="50">
	<Popup x:Name="Popup">
		<StackPanel x:Name="Stack_Panel" Background="{DynamicResource Stack_Panel_Background}" MouseLeave="StackPanel_MouseLeave">
		</StackPanel>
	</Popup>
	<UserControl.Resources>
		<SolidColorBrush x:Key="Item_Selected" Color="LightBlue"/>
		<SolidColorBrush x:Key="Static_Background" Color="Transparent"/>
		<SolidColorBrush x:Key="Stack_Panel_Background" Color="#FF3A3A3A"/>
	</UserControl.Resources>
</UserControl>
